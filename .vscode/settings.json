{
    "workbench.editor.limit.excludeDirty": true,
    "files.exclude": {
        "**/*.pyc": {
            "when": "$(basename).py"
        },
        "**/__pycache__": true,
        "**/.todo_app_db": true,
        "**/.pytest_cache": true,
        "**/Pipfile.lock": true,
    },
    "python.linting.enabled": false,
    "python.analysis.typeCheckingMode": "off"
}
